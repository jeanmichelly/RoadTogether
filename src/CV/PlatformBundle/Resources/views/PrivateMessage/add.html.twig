{% extends "CVPlatformBundle::layout.html.twig" %}

{% block title %}
    Envoyer un message à {{relatedUser}} - {{ parent() }}
{% endblock %}      

{% block cvplatform_body %}

        <div class="well well-sm">
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}
                <fieldset>
                <legend class="text-center">Envoyer un message à {{relatedUser}}</legend>

                <div class="form-group">
                    {{ form_label(form.content, "Message", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                    <div class="col-md-9">{{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}</div>
                    <div class="col-md-3"></div>
                    <div class="col-md-9"> {{ form_errors(form.content) }}</div>
                </div>

    <a href="{{ path('cv_profile_view', {'id': relatedUser.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour au profil
    </a>
           {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
            </fieldset>
            {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}