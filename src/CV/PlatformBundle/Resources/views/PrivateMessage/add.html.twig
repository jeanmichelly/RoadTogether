{% extends "CVPlatformBundle::layout.html.twig" %}

{% block title %}
    Envoyer un message à {{relatedUser}} | {{ parent() }}
{% endblock %}

{% block navtab_top %}
{% endblock %}

{% block cvplatform_body %}
    <div class="nav">
        <a href="{{ path('cv_profile_view', {'id': relatedUser.id}) }}" class="cv">← Retour au profil</a>
    </div>
    
    <div class="panel panel-default">
        <div class="cv panel-heading">Envoyer un message à {{relatedUser}}</div>
        <div class="panel-body">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}
                    <div class="form-group">
                        {{ form_label(form.content, "Message", {'label_attr': {'class': 'col-md-1 control-label'}}) }}
                        <div class="col-md-11">{{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}</div>
                        <div class="col-md-3"></div>
                        <div class="col-md-9"> {{ form_errors(form.content) }}</div>
                    </div>
                    {{ form_widget(form.enregistrer, {'attr': {'class': 'cv-btn-secondary pull-right'}}) }}
                {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}