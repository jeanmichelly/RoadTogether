{% extends "CVPlatformBundle::layout.html.twig" %}

{% block title %}
    Avis laissés - {{ parent() }}
{% endblock %}

{% block menu_lateral %}  
    {{ include("CVPlatformBundle:Rating:menu.html.twig") }}  
{% endblock %}

{% block cvplatform_body %}
    <h2>Avis laissés</h2>

    {% for ratingSended in listRatingsSended %}
        <div class="well">
            <i>Avis laissé le {{ ratingSended.date|date('d/m/Y') }}<i/>
            <li>Evaluation : {{ ratingSended.evaluation }}</li>
            <li>Description : {{ ratingSended.description }}</li>
        </div>
    {% endfor %}

    <ul class="pagination">
        {% for p in range(1, nbPages) %}
            <li{% if p == page %} class="active"{% endif %}><a href="{{ path('cv_platform_my_rides', {'page': p}) }}">{{ p }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}
