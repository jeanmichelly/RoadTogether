{% extends "CVPlatformBundle::layout.html.twig" %}

{% block title %}
    Mes annonces - {{ parent() }}
{% endblock %}

{% block cvplatform_body %}
    <h2>Liste de mes annonces</h2>

    {% for ride in listRides %}
        <div class="well">
            <i>Annonce créé le {{ ride.offerPublished|date('d/m/Y à H:i:s') }}<i/>
            <li>Lieu de départ : {{ ride.departure }}</li>
            <li>Lieu d'arrivé : {{ ride.arrival }}</li>
            <li>Prix : {{ ride.price }}</li>

            <p>
                <a href="{{ path('cv_platform_view', {'id': ride.id   }) }}" class="btn btn-default"><i class="glyphicon glyphicon-eye-open"></i>Voir détails</a>
            </p>
        </div>
    {% endfor %}

    <ul class="pagination">
        {% for p in range(1, nbPages) %}
            <li{% if p == page %} class="active"{% endif %}><a href="{{ path('cv_platform_my_rides', {'page': p}) }}">{{ p }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}
