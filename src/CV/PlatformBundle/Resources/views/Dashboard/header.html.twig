<div id="dashboard-header">
	<div class="row">
		<div class="col-md-12">
			<div class="col-md-3">
			  	{% block profile_picture %}   
					{{ render(controller('CVProfileBundle:Profile:picture', {'thumb': 'my_picture_navbartop_small', 'user': app.user})) }} 
				{% endblock %}
				<div class="user-presentation">
					<h4>Bonjour {{ app.user }}</h4>
					<a href="{{ path('cv_profile_edit') }}" class="cv">→ Modifier votre profil</a>
				</div>
			</div>
			<div class="col-md-9 user-experience">
				<h4>Votre niveau d'expérience</h4>
				<div class="row bs-wizard" style="border-bottom:0;">
	                <div class="col-xs-3 bs-wizard-step{% if user_level == 1 %} active{% else %} complete{% endif %}">
	                  <div class="text-center bs-wizard-stepnum"><span {% if user_level == 1 %}class="user_level_active"{% endif %}>Débutant</span></div>
	                  <div class="progress"><div class="progress-bar"></div></div>
	                  <a href="#" class="bs-wizard-dot"></a>
	                </div>
	                
	                <div class="col-xs-3 bs-wizard-step{% if user_level == 2 %} active{% elseif user_level > 2 %} complete{% else %} disabled{% endif %}">
	                  <div class="text-center bs-wizard-stepnum"><span {% if user_level == 2 %}class="user_level_active"{% endif %}>Habitué</span></div>
	                  <div class="progress"><div class="progress-bar"></div></div>
	                  <a href="#" class="bs-wizard-dot"></a>
	                </div>
	                
	                <div class="col-xs-3 bs-wizard-step{% if user_level == 3 %} active{% elseif user_level > 3 %} complete{% else %} disabled{% endif %}">
	                  <div class="text-center bs-wizard-stepnum"><span {% if user_level == 3 %}class="user_level_active"{% endif %}>Confirmé</span></div>
	                  <div class="progress"><div class="progress-bar"></div></div>
	                  <a href="#" class="bs-wizard-dot"></a>
	                </div>
	                
	                <div class="col-xs-3 bs-wizard-step{% if user_level == 4 %} active{% elseif user_level > 4 %} complete{% else %} disabled{% endif %}">
	                  <div class="text-center bs-wizard-stepnum"><span {% if user_level == 4 %}class="user_level_active"{% endif %}>Expert</span></div>
	                  <div class="progress"><div class="progress-bar"></div></div>
	                  <a href="#" class="bs-wizard-dot"></a>
	                </div>
	            </div>
			</div>
		</div>
	</div>
</div>