{% extends "CVAdminBundle::layout.html.twig" %}

{% block body %}
    {% stylesheets '@CVAdminBundle/Resources/public/css/filterTable.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {% endstylesheets %}
    <div class="container">
        <h3>Vue tableau des utilisateurs avec leur profil</h3>
        <hr>    
        <div class="row">
            <div class="panel panel-primary filterable">
                <div class="panel-heading">
                    <h3 class="panel-title">Utilisateurs</h3>
                    <div class="pull-right">
                        <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filtrer</button>
                    </div>
                </div>
                <table id="dataTables-example" class="table">
                    <thead>
                        <tr class="filters">
                            <th><input type="text" class="form-control" placeholder="id" disabled></th>
                            <th><input type="text" class="form-control" placeholder="Nom" disabled></th>
                            <th><input type="text" class="form-control" placeholder="Prénom" disabled></th>
                            <th><input type="text" class="form-control" placeholder="Nom d'utilisateur" disabled></th>
                            <th><input type="text" class="form-control" placeholder="Âge" disabled></th>
                            <th><input type="text" class="form-control" placeholder="Téléphone" disabled></th>
                            <th><input type="text" class="form-control" placeholder="Email" disabled></th>
                            <th><input type="text" class="form-control" placeholder="Date d'inscription" disabled></th>
                            <th><input type="text" class="form-control" placeholder="Solde" disabled></th>
                            <th><input type="text" class="form-control" placeholder="Dernière connexion" disabled></th>
                            <th><input type="text" class="form-control" placeholder="Biographie" disabled></th>
                            <th><input type="text" class="form-control" placeholder="Date de naissance" disabled></th>
                            <th><input type="text" class="form-control" placeholder="Statut" disabled></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for profile in profiles %}
                            <tr>
                                <td>{{ profile.user.id }}</td>
                                <td>{{ profile.name }}</td>
                                <td>{{ profile.firstname }}</td>
                                <td>{{ profile.user.username }}</td>
                                <td>{{ profile.age }}</td>
                                <td>{{ profile.phone }}</td>
                                <td>{{ profile.user.email }}</td>
                                <td>{{ profile.user.dateRegistration | date('d/m/Y') }}</td>
                                <td>{{ profile.user.balance }}</td>
                                <td>{{ profile.user.lastLogin | date('d/m/Y') }}</td>
                                <td>{{ profile.biography }}</td>
                                <td>{{ profile.birthday | date('d/m/Y') }}</td>
                                <td>{{ profile.level }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    {% javascripts 
        '@CVAdminBundle/Resources/public/js/filterTable.js'
        '@CVAdminBundle/Resources/public/js/jquery.dataTables.min.js'
        '@CVAdminBundle/Resources/public/js/dataTables.bootstrap.min.js'
        '@CVAdminBundle/Resources/public/js/metisMenu.min.js'
        '@CVAdminBundle/Resources/public/js/admin.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}