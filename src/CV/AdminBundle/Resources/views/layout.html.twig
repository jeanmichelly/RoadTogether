<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}CV Admin{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        {% stylesheets 
            '@CVAdminBundle/Resources/public/css/admin.css' %}
            <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
    {% endblock %}
</head>

<body>
    <div class="container">
        <nav class="navbar navbar-default">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('cv_admin_homepage') }}">Covoiturage</a>
            </div>
                {% include 'CVAdminBundle::navbar-top.html.twig' %}
        </nav>
      
        <div class="row">
            <div id="menu" class="col-md-2" style="margin-top:110px">
                {% include 'CVAdminBundle::navbar-left.html.twig' %}   
            </div>  
               
            <div id="container" class="col-md-10">
                {% block body %}
                {% endblock %}
            </div>
        </div>

        <hr>

        <footer>
            <p>The sky's the limit Â© {{ 'now'|date('Y') }} and beyond.</p>
        </footer>
    </div>
    {% block javascripts %}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
        {% javascripts '@CVAdminBundle/Resources/public/js/admin.js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
</body>
</html>
