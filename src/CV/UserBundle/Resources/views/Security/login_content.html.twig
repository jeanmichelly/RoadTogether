<!--Pulling Awesome Font -->
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

<ul class="nav nav-pills nav-stacked">
    <div class="form-login"> 
        <form action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            <input type="text" id="username" class="form-control chat-input" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}"/></br>
            <div class="input-group">
                <input type="password" id="password" class="form-control chat-input pwd" name="_password" required="required" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}"     />
                <span class="input-group-btn">
                    <button class="btn btn-default reveal" type="button"><i class="glyphicon glyphicon-eye-open"></i></button>
                </span>          
            </div></br>
            <div class="wrapper">
                <span class="group-btn">     
                    <button type="submit" id="_submit" name="_submit" class="btn btn-primary btn-md">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }} <i class="fa fa-sign-in"></i></button>
                </span>
            </div>
        </form>
    </div>
</ul>
{% block javascripts %}
    {% javascripts 'js/jquery.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript">
        $(".reveal").mousedown(function() {
            $(".pwd").replaceWith($('.pwd').clone().attr('type', 'text'));
        })
        .mouseup(function() {
            $(".pwd").replaceWith($('.pwd').clone().attr('type', 'password'));
        })
        .mouseout(function() {
            $(".pwd").replaceWith($('.pwd').clone().attr('type', 'password'));
        });
    </script>
{% endblock %}

