{% extends "CVPlatformBundle::layout.html.twig" %}

{% block title %}
    Mon mot de passe | {{ parent() }}
{% endblock %}

{% block cvplatform_body %}
	<div class="container">
        <div class="col-md-3">
            {{ include("CVProfileBundle::menu.html.twig") }}
        </div>
        <div class="col-md-9">
			<h3 class="sub-title">Mot de passe</h3>
            <hr>
            <div class="well well-sm well-profile">
				{% trans_default_domain 'FOSUserBundle' %}

				{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password form-horizontal' } }) }}
					<fieldset>
						<div class="form-group">
			                {{ form_label(form.current_password, "Actuel", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
			                <div class="col-md-9">{{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}</div>
			                {{ form_errors(form.current_password) }}
			            </div>
						<div class="form-group">
			                {{ form_label(form.plainPassword.first, "Nouveau mot de passe", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
			                <div class="col-md-9">{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}</div>
			                {{ form_errors(form.plainPassword.first) }}
			            </div>
						<div class="form-group">
			                {{ form_label(form.plainPassword.second, "Confirmez le nouveau", {'label_attr': {'class': 'col-md-3 control-label'}}) }}
			                <div class="col-md-9">{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}</div>
			                {{ form_errors(form.plainPassword.second) }}
			            </div>
					    <div>
					        <input type="submit" value="{{ 'change_password.submit'|trans }}" class="cv-btn-primary"/>
					    </div>
					</fieldset>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}