{% extends "CVUserBundle::layout.html.twig" %}
{% block body %}
    <div class="well well-sm">                                                           
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}
        <fieldset>
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <form id="form-register" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Nom d\'utilisateur'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">{{ form_errors(form.username) }}</div>

                        <div class="row">
                            <div class="col-md-6 form-left">
                                <div class="form-group">
                                    {{ form_widget(form.profile.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6 form-right">
                                <div class="form-group">
                                    {{ form_widget(form.profile.firstName, {'attr': {'class': 'form-control', 'placeholder': 'Pr√©nom'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12"> {{ form_errors(form.profile.name) }}</div>
                        <div class="col-md-12"> {{ form_errors(form.profile.firstName) }}</div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    {{ form_widget(form.profile.birthday, {'attr': {'class': 'form-control', 'placeholder': 'Date de naissance'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12"> {{ form_errors(form.profile.birthday) }}</div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    {{ form_widget(form.profile.image.file, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12"> {{ form_errors(form.profile.image.file) }}</div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'E-mail'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12"> {{ form_errors(form.email) }}</div>

                        <div class="row">
                            <div class="col-md-6 form-left">
                                <div class="form-group">
                                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
                                </div>
                            </div>
                            <div class="col-md-6 form-right">
                                <div class="form-group">
                                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer le mot de passe'}}) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12"> {{ form_errors(form.plainPassword.first) }}</div>
                        <div class="col-md-12"> {{ form_errors(form.plainPassword.second) }}</div>
                        <center><input class="cv-btn-primary" type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" /></center>
                </fieldset>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}


