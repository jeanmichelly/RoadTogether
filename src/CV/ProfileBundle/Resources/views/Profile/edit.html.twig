{% extends "CVPlatformBundle::layout.html.twig" %}

{% block title %}
  Editer votre profil - {{ parent() }}
{% endblock %}

{% block menu_lateral %}    
    <div class="panel-group" id="accordion">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne"><span class="glyphicon glyphicon-edit"></span> Editer profil</a>
                </h4>
            </div>
            <div id="collapseOne" class="panel-collapse collapse ">
                <ul class="list-group">
                    <li class="list-group-item"><span class="glyphicon glyphicon-pencil text-primary"></span><a href="{{ path('cv_profile_edit_car', {'id': form.vars.value.id }) }}"> Editer mes voitures</a></li>
                    <li class="list-group-item"><span class="glyphicon glyphicon-pencil text-primary"></span><a href="{{ path('cv_profile_edit_preference', {'id': form.vars.value.id }) }}"> Editer mes préférences</a></li>
                </ul>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseFour"><span class="glyphicon glyphicon-eye-open"></span> Voir mon profil</a>
                </h4>
            </div>
            <div id="collapseFour" class="panel-collapse collapse">
                        <ul class="list-group">
                    <li class="list-group-item"><span class="glyphicon glyphicon-eye-open text-primary"></span><a href="#"> Voir mes voitures</a></li>
                    <li class="list-group-item"><span class="glyphicon glyphicon-eye-open text-primary"></span><a href="#"> Voir mes préférences</a></li>
                </ul>
            </div>
{% endblock %}

{% block cvplatform_body %}
    <h2>Editer votre profil</h2>
    <div class="well">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {# Les erreurs générales du formulaire. #}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.name, "Nom", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.name) }}
                <div class="col-sm-4">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.firstName, "Prénom", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                {{ form_errors(form.firstName) }}
                <div class="col-sm-4">
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
    
            {{ form_row(form.age) }}
                <div class="form-group">
                    {{ form_label(form.biography, "Biographie", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                    {{ form_errors(form.biography) }}
                    <div class="col-sm-4">
                        {{ form_widget(form.biography, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.picture, "Photo", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                    {{ form_errors(form.picture) }}

                    <div class="col-sm-4">
                        {{ form_widget(form.picture, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

            {{ form_row(form.birthday) }}

                <div class="form-group">
                    {{ form_label(form.phone, "Téléphone", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                    {{ form_errors(form.phone) }}
                    <div class="col-sm-4">
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

            {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}

            {# Génération automatique des champs pas encore écrits.
             Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
             et tous les champs cachés (type « hidden »). #}
            {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}