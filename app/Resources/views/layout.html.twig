{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}CV Plateforme{% endblock %}</title>

    {% block stylesheets %}
        {% stylesheets 'css/nav_account_manager.css' %}
            <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
    {% endblock %}

    <style>
        .badge-notify{
            background:red;
            position:relative;
            top: -53px;
            left: 24px;
        }
    </style>
</head>

<body>
    <div class="container">
        <nav class="navbar navbar-default">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('cv_platform_home') }}">Covoiturage</a>
            </div>
                {% include '::navbar-top.html.twig' %}
        </nav>
      
        <div class="row">
            <div id="menu" class="col-md-3">
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    {% block menu_lateral %}    
                    {% endblock %}    
    
                {% elseif app.request.attributes.get('_route') != 'fos_user_security_login' %}
                    <h3>Identification</h3>
                    {{ render(controller('CVUserBundle:Security:login')) }}
                {% endif %}
            </div>  
               
            <div id="content" class="col-md-9">
                {% block body %}
                {% endblock %}
            </div>
        </div>

        <hr>

        <footer>
            <p>The sky's the limit Â© {{ 'now'|date('Y') }} and beyond.</p>
        </footer>
    </div>
    {% block javascripts %}
        {% javascripts 'js/jquery.js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    {% endblock %}
</body>
</html>
